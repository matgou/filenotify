# log file path
# to store all message in file
logfile=/home/m-sap-orp/filenotify.log

# log level INFO or DEBUG or ERROR
loglevel=DEBUG

# plugins dir
plugins_dir=./bin/
plugins.log=plg_notify_log.so
plugins.influxdb=plg_http_post.so
plugins.exec=plg_notify_exec.so

# plugins http_post
http_post.url=http://localhost:8086/write?db=data
http_post.data=file_status,host=localhost,dirname=%s,filename=%s value=%s

exec.cmd=echo "file_status,dirname=%s,filename=%s value=%s"
# directory to watch
# watch_directory.<key>=<directory_path>
watch_directory.0=/tmp/test1
watch_directory.1=/tmp/test3
